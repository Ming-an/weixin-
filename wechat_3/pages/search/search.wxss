/* pages/search/search.wxss */
.search{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 10rpx 30rpx;
  font-size: 35rpx;
}
.searchInput{
  background-color: rgb(245, 240, 240);
  box-sizing: border-box;
  border-radius: 20rpx;
  width: 85%;
}
.goods{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.good-item{
  width: 50%;
  margin-top: 10rpx;
  padding: 10rpx 0rpx 20rpx 0;
}
.img{
  width: 100%;
}
.img image{
  width: 100%;
  height: 100%;
}
.goodsName{
  font-size: 32rpx;
}
.price{
  margin-top: 5rpx;
  color: red;
}