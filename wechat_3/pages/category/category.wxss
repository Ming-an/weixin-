/* pages/category/category.wxss */
page{
  height: 100%;
  --themeColor: red;
}
.cates{
  height: 100%;
}
.cates_container{
  height: calc(100vh - 90rpx);
  display: flex;
}
.left_menu{
  flex: 2;
}
.left_menu .active{
  color:var(--themeColor);
  border-left: 5rpx solid currentColor;
}
 .menu_item{
  width: 200rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  font-size: 30rpx;
}

.right_content{
  flex:5;
}
.goods_list{
  display: flex;
  flex-wrap: wrap;
}

.goods_list navigator{
  width: 33.3%;
  text-align: center;
  font-size: 30rpx;
}
image{
  width: 100%;
}
.goods_title{
  color:pink;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.goods_list image{
  width: 50%;
}
